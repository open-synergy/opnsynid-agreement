<odoo>

    <record id="agreement_cancel_reason_view_tree" model="ir.ui.view">
        <field name="name">agreement.cancel_reason tree</field>
        <field name="model">agreement.cancel_reason</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="agreement_cancel_reason_view_form" model="ir.ui.view">
        <field name="name">agreement.cancel_reason form</field>
        <field name="model">agreement.cancel_reason</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form>
                <group name="group_1" colspan="4" col="2">
                    <field name="name"/>
                    <field name="active"/>
                </group>
                <notebook colspan="4">
                    <page name="note" string="Notes">
                        <field name="note"/>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="agreement_cancel_reason_view_search" model="ir.ui.view">
        <field name="name">agreement.cancel_reason search</field>
        <field name="model">agreement.cancel_reason</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="agreement_cancel_reason_action" model="ir.actions.act_window">
        <field name="name">Agreement Cancel Reason</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agreement.cancel_reason</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="agreement_core.agreement_cancel_reason_view_search"/>
    </record>

    <menuitem
        id="agreement_cancel_reason_menu"
        name="Cancel Reasons"
        parent="agreement_core.agreement_configuration_menu"
        action="agreement_cancel_reason_action"
        sequence="4"
        />


</odoo>
