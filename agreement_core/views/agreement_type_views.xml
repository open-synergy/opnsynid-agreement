<odoo>

    <record id="agreement_type_view_tree" model="ir.ui.view">
        <field name="name">agreement.type tree</field>
        <field name="model">agreement.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="agreement_type_view_form" model="ir.ui.view">
        <field name="name">agreement.type form</field>
        <field name="model">agreement.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form>
                <group name="group_1" colspan="4" col="2">
                    <field name="name"/>
                    <field name="active"/>
                    <field name="sequence_id"/>
                </group>
                <notebook colspan="4">
                    <page name="note" string="Notes">
                        <field name="note"/>
                    </page>
                    <page name="policy" string="Workflow Policy">
                        <group name="agreement_policy_1" colspan="4" col="2" string="Agreement">
                            <field name="agreement_confirm_group_ids" widget="many2many_tags"/>
                            <field name="agreement_print_group_ids" widget="many2many_tags"/>
                            <field name="agreement_attach_group_ids" widget="many2many_tags"/>
                            <field name="agreement_approve_group_ids" widget="many2many_tags"/>
                            <field name="agreement_active_group_ids" widget="many2many_tags"/>
                            <field name="agreement_expire_group_ids" widget="many2many_tags"/>
                            <field name="agreement_terminate_group_ids" widget="many2many_tags"/>
                            <field name="agreement_revision_group_ids" widget="many2many_tags"/>
                            <field name="agreement_cancel_group_ids" widget="many2many_tags"/>
                            <field name="agreement_restart_group_ids" widget="many2many_tags"/>
                        </group>
                    </page>
                </notebook>
            </form>
        </field>
    </record>

    <record id="agreement_type_view_search" model="ir.ui.view">
        <field name="name">agreement.type search</field>
        <field name="model">agreement.type</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="agreement_type_action" model="ir.actions.act_window">
        <field name="name">Agreement Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agreement.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="agreement_core.agreement_type_view_search"/>
    </record>

    <menuitem
        id="agreement_type_menu"
        name="Type"
        parent="agreement_core.agreement_configuration_menu"
        action="agreement_type_action"
        sequence="1"
        />


</odoo>
